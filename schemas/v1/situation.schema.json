{
  "$id": "https://USERNAME.github.io/tenir-schemas/schemas/v1/situation.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Situation",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "text",
    "horizon"
  ],
  "properties": {
    "text": {
      "type": "string",
      "maxLength": 20000
    },
    "horizon": {
      "$ref": "time-window.schema.json"
    },
    "locale": {
      "type": "string",
      "default": "fr"
    },
    "attachments": {
      "type": "array",
      "items": {
        "$ref": "attachment-ref.schema.json"
      },
      "default": []
    }
  }
}