{
  "$id": "https://skiredj-prog.github.io/tenir-schemas/schemas/v1/recommendation.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Recommendation",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "type",
    "title",
    "rationale",
    "expected_effect",
    "reversibility",
    "confidence"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]{6,64}$"
    },
    "type": {
      "type": "string",
      "enum": [
        "NO_REGRET",
        "CONDITIONAL",
        "EXPERIMENT",
        "CONTAINMENT",
        "GOVERNANCE"
      ]
    },
    "title": {
      "type": "string",
      "maxLength": 200
    },
    "rationale": {
      "type": "string",
      "maxLength": 4000
    },
    "expected_effect": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "tau_distance_delta",
        "pressure_delta",
        "option_preservation_delta"
      ],
      "properties": {
        "tau_distance_delta": {
          "type": "number"
        },
        "pressure_delta": {
          "type": "number"
        },
        "option_preservation_delta": {
          "type": "number",
          "minimum": -1,
          "maximum": 1
        }
      }
    },
    "reversibility": {
      "type": "string",
      "enum": [
        "REVERSIBLE",
        "PARTIALLY_REVERSIBLE",
        "IRREVERSIBLE"
      ]
    },
    "confidence": {
      "$ref": "confidence.schema.json"
    },
    "required_consultation": {
      "type": "boolean",
      "default": false
    }
  }
}
