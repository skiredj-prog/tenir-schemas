{
  "$id": "https://USERNAME.github.io/tenir-schemas/schemas/v1/attachment-ref.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AttachmentRef",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "ref"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "URL",
        "OBJECT_STORAGE"
      ]
    },
    "ref": {
      "type": "string",
      "maxLength": 2048
    },
    "sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    }
  }
}